<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="151dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="12dp">
    <LinearLayout
        android:background="#39E8E6E5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
            <com.makeramen.roundedimageview.RoundedImageView
                app:riv_corner_radius="12dp"
                android:layout_width="140dp"
            android:layout_height="140dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
            android:padding="5dp"
            android:scaleType="centerCrop"
            android:id="@+id/dish_image"
            android:src="@drawable/hakkanoodles"
           />
        <LinearLayout
            android:layout_marginTop="4dp"
            android:layout_width="243dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:id="@+id/dish_name"
            android:layout_width="242dp"
            android:layout_height="0dp"
            android:layout_marginStart="2dp"
            android:drawableLeft="@drawable/baseline_dinner_dining_24"
            android:layout_marginTop="9dp"
            android:layout_weight="1"
            android:text="Chicken Hakka Noodles"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />
            <LinearLayout
                android:layout_marginTop="7dp"
                android:layout_width="243dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/dish_des"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Description"
                    android:textSize="17sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="40dp"
                android:layout_marginBottom="5dp"
                android:layout_width="243dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <ImageView
                android:layout_width="34dp"
                android:layout_height="30dp"
                android:layout_marginTop="3dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/baseline_account_balance_wallet_24" />
            <TextView
                android:id="@+id/price_currencyholder"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginStart="2dp"
                android:text="AED "
                android:textSize="16sp" />

            <TextView
                android:id="@+id/dish_price"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginStart="1dp"
                android:text="20"
                android:textSize="16sp" />
                <LinearLayout
                    android:id="@+id/orderbutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <ImageButton
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:layout_marginStart="18dp"
                    android:background="@color/white"
                    android:src="@drawable/addtocart"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                <TextView
                    android:id="@+id/add_to_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="6dp"
                    android:text="ORDER"
                    android:textColor="@color/bgcolor"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:ignore="TextContrastCheck" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>