<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/rest_img"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="2dp"
            android:padding="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/r1"
            app:riv_corner_radius="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rest_name"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:text="Bella Vita Trattoria"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rest_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginRight="12dp"
                android:text="Discount 20%"
                android:textColor="@color/bgcolor"
                android:textSize="17sp"
                android:textStyle="bold" />
        </LinearLayout>


        <TextView
            android:id="@+id/rest_des"
            android:layout_width="324dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Description"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="34dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/baseline_delivery_dining_24" />

            <TextView
                android:id="@+id/rest_currencyholder"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="3dp"
                android:text="AED"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/rest_fee"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="3dp"
                android:text="2.49"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/baseline_watch_later_24" />

            <TextView
                android:id="@+id/rest_time"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:text="15-30 min"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/baseline_star_24" />

            <TextView
                android:id="@+id/rest_rating"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:text="4.5"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>