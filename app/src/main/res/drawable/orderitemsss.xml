<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/edittext_background.xml -->

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background white rectangle with rounded corners -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
    <!-- Thin black outline -->
    <item
        android:left="1dp"
        android:right="1dp"
        android:top="1dp"
        android:bottom="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="#0DEA985B" />
            <stroke
                android:width="3dp"
                android:color="#B3EA985B" />
        </shape>
    </item>
</layer-list>
